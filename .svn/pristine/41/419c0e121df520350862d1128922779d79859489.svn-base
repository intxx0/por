.widget-stats .stats-icone {
    color: #fff;
    font-size: 42px;
    height: 56px;
    line-height: 56px;
    margin-left: 20px;
    position: absolute;
    right: 5px;
    text-align: center;
    top: 5px;
    width: 56px;
}

.stats-info a {
    text-decoration: none;
}

    .stats-info a p {
        border-radius: 2%;
        color: white;
        padding: 2px;
        background: #007336 none repeat scroll 0 0;
    }

        .stats-info a p:hover {
            background: #00A650;
            color: white;
        }

        .stats-info a p i {
            color: white;
            font-size: 50px;
        }

