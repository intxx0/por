<div>
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">{{ 'HOME' | translate }}</a></li>
        <li class="active">{{ 'OPERATION' | translate }}</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">{{ 'OPERATION' | translate }}</h1>
    <!-- end page-header -->
    <!-- begin row -->
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
                <div class="panel-heading">
                    <h4 class="panel-title">{{ 'SEARCH' | translate }}</h4>
                </div>
                <div class="panel-body">
                    <form name="formFiscalizacao" role="form">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>{{ 'OPERATION' | translate }}:</label>
                                    <select class="form-control" id="ddlOperacao" ng-change="loadAtividades(modelOperacao.IdOperacao)" ng-model="modelOperacao.IdOperacao" ng-options="option.IdOperacao as option.DescOperacao for option in Operacoes"></select>
                                    <input type="hidden" name="modelOperacao.IdOperacao" ng-value="modelOperacao.IdOperacao" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>{{ 'ACTIVITY' | translate }}:</label>
                                    <select class="form-control" id="ddlAtividade" ng-change="loadKor(modelOperacao.IdTipoFiscalizacao)" ng-model="modelOperacao.IdTipoFiscalizacao" ng-options="option.IdTipoFiscalizacao as option.DescTipoFiscalizacao for option in TiposFiscalizacao"></select>
                                    <input type="hidden" name="modelOperacao.IdTipoFiscalizacao" ng-value="modelOperacao.IdTipoFiscalizacao" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>KOR:</label>
                                    <select class="form-control" id="ddlKor" ng-change="loadProfissionais(modelOperacao.IdTipoFiscalizacao, modelOperacao.IdKor)" ng-model="modelOperacao.IdKor" ng-options="option.IdKor as option.Nome for option in Kor"></select>
                                    <input type="hidden" name="modelOperacao.IdKor" ng-value="modelOperacao.IdKor" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>{{ 'USERS' | translate }}:</label>
                                    <select class="form-control" id="ddlUsuarios" ng-model="modelOperacao.UsuarioId" ng-options="option.UsuarioId as option.DescNome for option in Usuarios"></select>
                                    <input type="hidden" name="modelOperacao.UsuarioId" ng-value="modelOperacao.UsuarioId" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>{{ 'START_DATE' | translate }}:</label>
                                    <input type="text" class="form-control" name="modelOperacao.DataInicial" ng-model="modelOperacao.DataInicial" ui-mask="99/99/9999" ui-mask-placeholder ui-mask-placeholder-char="_" required>
                                    <div ng-show="formCadOperacao.txtDataCriado.$invalid && !formCadOperacao.txtDataCriado.$pristine" style="color: red;">{{ 'ENTER_START_DATE' | translate }}</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>{{ 'END_DATE' | translate }}:</label>
                                    <input type="text" class="form-control" name="modelOperacao.DataFinal" ui-mask="99/99/9999" ui-mask-placeholder ui-mask-placeholder-char="_" ng-model="modelOperacao.DataFinal" required>
                                    <div ng-show="formCadOperacao.txtDataInicio.$invalid && !formCadOperacao.txtDataInicio.$pristine" style="color: red;">{{ 'ENTER_END_DATE' | translate }}</div>
                                </div>
                            </div>

                            <div class="col-md-3" style="height:71px;">
                                <button type="button" class="btn btn-sm btn-success" style="margin-top:23px; float:right;" ng-click="clearFields()"><i class="fa fa-bar-chart" style="font-size:10px;"></i>&nbsp;&nbsp;{{ 'INSPECTION_CHARTS' | translate }}</button>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-sm btn-success" ng-click="doSearch(modelOperacao)" style="margin-top:23px; float:right;"><i class="fa fa-list-ul" style="font-size:10px;"></i>&nbsp;&nbsp;{{ 'EVENTS' | translate }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end panel -->

            <div class="panel panel-inverse" data-sortable-id="table-basic-4">
                <div class="panel-heading">
                    <span class="pull-right">Total: {{TotalOperacoes}} {{ 'OPERATIONS' | translate }}</span>
                    <h4 class="panel-title">{{ 'OPERATIONS' | translate }}</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'OPERATION' | translate }}</th>
                                <th>{{ 'OPERATIONS_STATUS' | translate }}</th>
                                <th>{{ 'CREATE_DATE' | translate }}</th>
                                <th>{{ 'FINISH_DATE' | translate }}</th>
                                <th width="76">{{ 'ACTION' | translate }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="operacao in Operacoes | filter: Filtro">
                                <td>{{operacao.DescOperacao}}</td>
                                <td>{{operacao.DescStatus}}</td>
                                <td>{{operacao.DataCriacao | date:'dd/MM/yyyy HH:mm'}}</td>
                                <td>{{operacao.DataFinalizacao | date:'dd/MM/yyyy HH:mm'}}</td>
                                <td>
                                    <a href="javascript:;" ng-href="#/detalhesoperacao/{{operacao.IdOperacao}}" ng-click="loadFiscalizacao(fiscalizacao.IdFiscalizacao)" class="btn" style="padding:2px;"><i class="fa fa-2x fa-search" style="color: #777; font-size: 16px;"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!--<div class="email-footer clearfix">
                        <custom-pager page="{{page}}" pages-count="{{pagesCount}}" total-count="{{totalCount}}" search-func="carregarSubTipoFiscalizacao(page)"></custom-pager>
                    </div>-->
                </div>
            </div>

        </div>
    </div>
</div>
