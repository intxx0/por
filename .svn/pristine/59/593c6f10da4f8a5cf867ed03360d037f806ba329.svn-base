<style>
    ul.list-group:after {
        clear: both;
        display: block;
        content: "";
    }

    .list-group-item {
        float: left;
        margin-left: 3px;
        margin-top: 5px;
        background-color: #ddd;
    }

    #removeImg {
        top: 6%;
        position: absolute;
        right: 2%;
    }
</style>
<div>
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">{{ 'HOME' | translate }}</a></li>
        <li class="active">{{ 'MESSAGES' | translate }}</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">{{ 'MESSAGES' | translate }}</h1>
    <!-- end page-header -->
    <!-- begin row -->
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                    <h4 class="panel-title">{{ 'WRITE_MESSAGE' | translate }}</h4>
                </div>
                <div class="panel-body">
                    <form name="cadMensagem" role="form" class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 control-label">{{ 'MESSAGE_TO' | translate }}</label>
                            <div class="col-md-9">
                                <select class="form-control" id="ddlDestinatarioEmail" ng-model="novaMensagem.UsuarioDestino" ng-options="option.UsuarioId as option.DescNome for option in Usuarios" required>
                                    <option value="">{{ 'SELECT' | translate }}...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">{{ 'MESSAGE' | translate }}</label>
                            <div class="col-md-9">
                                <textarea rows="5" placeholder="{{ 'MESSAGE_CONTENT' | translate }}" class="form-control" id="txtMensagem" ng-model="novaMensagem.TextoMensagem" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Anexos</label>
                            <div class="col-md-9">
                                <ul class="list-group btn-group">
                                    <li ng-repeat="imgInfo in imgsrc" class="list-group-item" id="{{imgInfo.nomeArq}}">
                                        <a href="javascript:void(0)" ng-click="removeImagem(imgInfo.nomeArq)"><span class="glyphicon glyphicon-remove-circle" id="removeImg"></span></a>
                                        <span>{{imgInfo.nome}}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-2">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-sm btn-success" ng-click="inserirMensagem(novaMensagem)"><i class="fa fa-play" style="font-size:10px;"></i>&nbsp;&nbsp;{{ 'SUBMIT' | translate }}</button>
                                <button type="button" class="btn btn-sm btn-success" ng-click="abreModalImagens()"><i class="fa fa-photo" style="font-size:10px;"></i>&nbsp;&nbsp;{{ 'IMAGE' | translate }}</button>
                                <button type="button" class="btn btn-sm btn-success" ng-click="abreModalVoz()"><i class="fa fa-microphone" style="font-size:10px;"></i>&nbsp;&nbsp;{{ 'AUDIO' | translate }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end panel -->

            <div class="panel panel-inverse" data-sortable-id="table-basic-4">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                    <input type="text" value="" id="txtPesquisarEnviados" class="pull-right" style="color:black" ng-model="mensagemrecebidas.$" placeholder="{{ SEARCH_SUBJECT | translate }}" />
                    <h4 class="panel-title">{{ 'MESSAGES' | translate }}</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th width="150">{{ 'DATE' | translate }}:</th>
                                <th width="150">{{ 'FROM' | translate }}:</th>
                                <th width="150">{{ 'TO' | translate }}:</th>
                                <th>{{ 'MESSAGE' | translate }}:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="mensagemrecebidas in MensagensRecebidas | orderBy: mensagemrecebidas.DataCriado | filter: mensagemrecebidas:strict">
                                <td>{{mensagemrecebidas.DataCriado | date: 'dd/MM/yyyy HH:mm:ss'}}</td>
                                <td>{{mensagemrecebidas.NomeRemetente}}</td>
                                <td>{{mensagemrecebidas.NomeDestinatario}}</td>
                                <td>{{mensagemrecebidas.TextoMensagem | limitTo: 45 }}{{mensagemrecebidas.TextoMensagem.length > 40 ? '...' : ''}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
