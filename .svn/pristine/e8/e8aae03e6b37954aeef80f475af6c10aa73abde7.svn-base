<!-- begin login -->
<style>
    #teste option:not(:checked), #teste option:checked {
        color: black;
    }
</style>
<div class="login bg-black animated fadeInDown" ng-controller="loginCtrl">
    <!-- begin brand -->
    <div class="login-header">
        <div class="brand">
            <img src="/assets/img/LogoPor-Colorido.png" height="75" width="128" alt="Portal de Operações Remotas" />
        </div>
        <div class="icon">
            <i class="fa fa-sign-in"></i>
        </div>
    </div>
    <!-- end brand -->
    <div class="login-content">
        <form method="POST" class="margin-bottom-0" ng-submit="login()">
            <div class="form-group m-b-20">
                <input type="text" class="form-control input-lg inverse-mode no-border" placeholder="{{ 'EMAIL' | translate }}" ng-model="usuario.Email" translate="EMAIL" required />
            </div>
            <div class="form-group m-b-20">
                <input type="password" class="form-control input-lg inverse-mode no-border" placeholder="{{ 'PASSWORD' | translate }}" maxlength="10" ng-model="usuario.Senha" translate="PASSWORD" required />
            </div>
            <div class="form-group m-b-20">
                
                <select id="teste" class="form-control input-lg inverse-mode no-border" name="language" ng-model="selectedLanguage" ng-change="changeLanguage(selectedLanguage)" ng-options="language.name | translate for language in languages track by language.code">
                    <option ng-repeat="option in languages.languageOptions" translate="{{option.translate}}" value="{{option.value}}">{{option.name}}</option>
                </select>
            </div>
            <div class="login-buttons">
                <button type="submit" class="btn btn-default btn-block btn-lg" translate="SUBMIT" style="color: black"></button>
            </div>
        </form>
    </div>
</div>
<!-- end login -->







